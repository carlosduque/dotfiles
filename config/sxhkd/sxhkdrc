# Basic binds
super + Escape
    pkill -USR1 -x sxhkd
super + Return
    $TERMINAL
super + space
    dmenu_run
#super + r
#    $TERMINAL -e $FILE
super + a
    $TERMINAL -e ncmpcpp
super + b
    $TERMINAL -e zathura
super + c
    $TERMINAL -e calcurse
super + e
    gvim
super + f
    firefox
super + shift + f
    bspc node -t fullscreen
super + g
    gimp
super + i
    $TERMINAL -e htop
super + shift + l
    bspc desktop -l next
super + k
    $TERMINAL -e vifm
super + m
    $TERMINAL -e neomutt
super + r
    $TERMINAL -e chez-scheme
super + shift + r
    $TERMINAL -e R
super + s
    $TERMINAL -e sc-im
super + t
    $TERMINAL -e telegram-cli
super + n
    wifimgr
super + w
    tabbed -c -r 2 surf -pe x https://duckduckgo.com
super + shift + x
    bspc node -c
super + shift + z
    bspc node -s biggest

# Et cetera...
super + dead_grave
    dmenuunicode
#super + Scroll_Lock
#    killall screenkey || screenkey
super + Insert
    showclip
super + Pause
    xcqr
super + shift + Escape
    bspc quit
ctrl + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
ctrl + alt + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
super + control + Escape
    prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
    bspc wm -r
super + control + BackSpace
    prompt "Reboot computer?" "sudo -A reboot"
