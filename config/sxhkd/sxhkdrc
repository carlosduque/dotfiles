# Basic binds
super + Escape
    pkill -USR1 -x sxhkd
super + Return
    $TERMINAL
super + space
    dmenu_run
#super + r
#    $TERMINAL -e $FILE
ctrl + a
    $TERMINAL -e ncmpcpp
ctrl + b
    $TERMINAL -e zathura
ctrl + c
    $TERMINAL -e calcurse
ctrl + f
    firefox
ctrl + g
    gvim
ctrl + i
    $TERMINAL -e htop
ctrl + k
    $TERMINAL -e vifm
ctrl + m
    $TERMINAL -e neomutt
ctrl + p
    gimp
ctrl + r
    $TERMINAL -e chez-scheme
ctrl + alt + r
    $TERMINAL -e R
ctrl + s
    $TERMINAL -e sc-im
ctrl + t
    $TERMINAL -e telegram-cli
ctrl + n
    wifimgr
ctrl + w
    tabbed -c -r 2 surf -pe x https://duckduckgo.com

# desktop:switching:by-numbers
super + 1
    bspc desktop Oz --focus
super + 2
    bspc desktop Hyrule --focus
super + 3
    bspc desktop Winterfell --focus
super + 4
    bspc desktop Hogwarts --focus
super + 5
    bspc desktop Narnia --focus
super + 6
    bspc desktop MiddleEarth --focus
super + 7
    bspc desktop Earthsea --focus
super + 8
    bspc desktop Neverland --focus
super + 9
    bspc desktop Wonderland --focus

# desktop:switching:by-keys
# left=d, down=r, up=t, right=n (dvorak)
super + shift + d
    bspc desktop prev --focus
super + shift + r
    bspc desktop prev --focus
super + shift + t
    bspc desktop next --focus
super + shift + n
    bspc desktop next --focus

# node:switching:by-keys
# left=d, down=r, up=t, right=n (dvorak)
super + d
    bspc node --focus west
super + r
    bspc node --focus south
super + t
    bspc node --focus north
super + n
    bspc node --focus east

# node:switching:by-arrows
super + ctrl + Left
    bspc node prev --focus
super + ctrl + Down
    bspc desktop prev --focus
super + ctrl + Up
    bspc desktop next --focus
super + ctrl + Right
    bspc node next --focus

# node:swapping:by-size
super + ctrl + plus
    bspc node --swap biggest
super + ctrl + minus
    bspc node --swap smallest

# node:swapping:by-keys (dvorak)
super + ctrl + g
    bspc node --swap west
super + ctrl + c
    bspc node --swap south
super + ctrl + h
    bspc node --swap north
super + ctrl + l
    bspc node --swap east

# node:moving:by-numbers
super + shift + 1
    bspc node --to-desktop Oz
super + shift + 2
    bspc node --to-desktop Hyrule
super + shift + 3
    bspc node --to-desktop Winterfell
super + shift + 4
    bspc node --to-desktop Hogwarts
super + shift + 5
    bspc node --to-desktop Narnia
super + shift + 6
    bspc node --to-desktop MiddleEarth
super + shift + 7
    bspc node --to-desktop Earthsea
super + shift + 8
    bspc node --to-desktop Neverland
super + shift + 9
    bspc node --to-desktop Wonderland

# wm:controls
super + ctrl + Escape
    bspc quit
super + ctrl + BackSpace
    bspc wm -r

super + ctrl + x
    bspc node --close
super + ctrl + space
    bspc node --state fullscreen
super + ctrl + dead_acute
    bspc desktop --layout next #monocle|tiled
#super + ctrl + ccedilla
#    bspc node --state tiled

# node:resize:by-keys
#ctrl + shift + {h,j,k,l}
ctrl + shift + {d,r,t,n}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
#ctrl + alt + {h,j,k,l}
ctrl + alt + {d,r,t,n}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# system:controls
super + alt + Escape
    prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + alt + BackSpace
    prompt "Reboot computer?" "sudo -A reboot"

