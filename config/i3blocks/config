command=~/scripts/statusbar/$BLOCK_NAME
separator_block_width=15
markup=pango

[click]
full_text=Click me!
command=echo "Got clicked with button $button"
color=#F79494

[weather]
command=curl -Ss 'https://wttr.in/Santiago?format=1'
interval=3600
color=#A4C2F4

[time]
command=date +%T
interval=5

[ip]
command=ifconfig em0 | grep 'inet ' | awk '{print $2}'
interval=once
color=#91E78B

