font-1 = "FontAwesome:size=12;0"
font-2 = "Noto Sans:size=10;0"
font-3 = "Noto Sans Mono:size=10;0"

modules-left = bspwm
modules-center = xwindow
modules-right = volume battery date

#### modules-center = release kernel uptime #memory2 #cpu2
#### modules-center = release load-average kernel cpu2 uptime volume mpd
#### modules-right = mpd volume release pub-ip battery date
#### modules-right = battery pub-ip memory2 cpu2 date wireless-network date

tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-position = right
tray-background = ${colors.background}

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

