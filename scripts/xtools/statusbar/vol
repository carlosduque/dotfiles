#!/bin/sh

case $BLOCK_BUTTON in
    1) setsid "$TERMINAL" -e mixer & ;;
    2) mixer vol 0 ;;
    4) mixer vol +5 ;;
    5) mixer vol -5 ;;
    3) pgrep -x dunst >/dev/null && notify-send "<b>ðŸ“¢ Volume module:</b>
- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
esac

[ "$(mixer -s vol | awk '{print $2}' | cut -d : -f 1)" = "1" ] && printf "ðŸ”‡\\n" && exit

vol=$(mixer -s vol | awk '{print $2}' | cut -d : -f 1)

if [ "$vol" -gt "69" ]; then
    icon="ï€¨"
elif [ "$vol" -gt "29" ]; then
    icon="ï€§"
elif [ "$vol" -lt "19" ]; then
    icon="ï€¦"
else
    icon="ï€¦"
fi

printf "%s  %s%%" "$icon" "$vol"
