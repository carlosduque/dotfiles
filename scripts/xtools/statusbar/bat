#!/usr/bin/env bash

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "<b>ğŸ”‹ Battery module:</b>
ï‡¦: charging
ï‰€: full battery
ï‰: high battery
ï‰‚: half battery
ï‰ƒ: low battery

ï‰„: minimum battery
â—ï‰„: very low battery!
- Text color reflects charge left" ;;
esac

declare -a options
options[0]="high"
options[1]="low"
options[2]="critical"
options[3]="charging"

capacity=$(apm -l) || exit
symbol=""
status=${options[$(apm -b)]}

if [ "$capacity" -ge 90 ]; then
    color="#00ff00"
    symbol="ï‰€"
elif [ "$capacity" -ge 75 ]; then
    color="#ffffff"
    symbol="ï‰"
elif [ "$capacity" -ge 50 ]; then
    color="#ffff00"
    symbol="ï‰‚"
elif [ "$capacity" -ge 25 ]; then
    color="#ffff00"
    symbol="ï‰ƒ"
elif [ "$capacity" -ge 10 ]; then
    color="#ffff00"
    symbol="ï‰„"
else
    color="#ff0000"
    symbol="ï‰„"
fi

[ "$status" = "charging" ] && symbol="ï‡¦" && color="#ffffff"

#printf "<span color='%s'>%s%s%s</span>" "$color" "$(echo "$symbol")" "$(echo "$capacity" | sed -e 's/$/%/')"
printf "%s %s%%" "$(echo "$symbol")" "$(echo "$capacity")"

