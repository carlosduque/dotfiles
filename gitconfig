[push]
  default = simple

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green

[color "status"]
  added = yellow
  changed = green
  untracked = blue

[alias]
  ls = log --pretty='format:%C(cyan)%h%C(reset) %C(dim cyan)%ad%C(reset) %s %C(bold yellow)%d %C(magenta)%an,%C(reset) %C(dim magenta)%ar' --all --date=short
  lg = log --oneline --decorate --graph

